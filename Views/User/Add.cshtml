@model CadastroUsuario.Models.ViewModels.UserViewModel
@{
    ViewBag.Title = "Adicionar Usuario";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "User", FormMethod.Post, new { role = "form", @class = "" }))
        {
            
            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Nome)
            @Html.TextBoxFor(d => d.Nome, new { @class = "form-control" })
            @Html.ValidationMessage("Nome", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Login)
            @Html.TextBoxFor(d => d.Login, new { @class = "form-control" })
            @Html.ValidationMessage("Login", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Senha)
            @Html.PasswordFor(d => d.Senha, new { @class = "form-control" })
            @Html.ValidationMessage("Senha", new { @class = "text-danger" })

            <div style="text-align:right">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }
    </div>
</div>